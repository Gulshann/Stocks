    <style>
        #margin-used {
            margin-left: 2%;
        }

        .image-div {
            height: 25px;
            width: 25px;
        }

        .image-div1 {
            height: 12px;
            width: 12px;
        }

        .profit-div {
            margin-left: auto;
        }

        .row-div {
            display: flex;
            flex-wrap: wrap;
        }

        .margin10 {
            margin: 5%;
        }

        .margin-auto {
            margin: auto;
        }

        .card-expando {
            margin-left: auto;
            margin-right: 10px;
            cursor: pointer;
        }

        .graph-div {
            cursor: pointer;
        }

        .row-div {
            display: flex;
            flex-wrap: wrap;
        }

        .card-contest {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            border-radius: 5px;
            background-color: white;
            margin: auto;
            width: 95%;
