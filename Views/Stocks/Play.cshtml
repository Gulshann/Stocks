            }

        .card-contest-modal {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            border-radius: 5px;
            background-color: white;
            margin: auto;
            width: 95%;
            margin-bottom: 5px;
            color: #0a2282;
        }

        .container {
            padding: 2px 16px;
        }

        .modal-dialog {
            bottom: 0 !important;
            position: fixed;
            width: 98%;
